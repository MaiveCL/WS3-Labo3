<%= render "shared/fil_ariane" %>

<h1><%= @business.name %></h1>

<p><strong>Description:</strong><br>
<%= @business.description || "Aucune description" %></p>

<% if @business.menus.any? %>

    <% @business.menus.each do |menu| %>
        <%= render partial: 'menu', locals: { menu: menu } %>
    <% end %>

<% else %>
    <p>Aucun menu disponible.</p>
<% end %>