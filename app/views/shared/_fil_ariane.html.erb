<p>
  <% if user_signed_in? %>
    <%= link_to "Accueil", root_path %> /
    <%= link_to "Mes menus", mesmenus_path %>

    <% current_business = local_assigns[:business] || (defined?(@business) && @business) %>

    <% if current_business %>
      / <%= current_business.name %>
    <% end %>

  <% else %>
    <%= link_to "Se connecter", new_user_session_path %> —
    vous n'êtes pas connecté
  <% end %>
</p>

<% if user_signed_in? %>
  <p>
    Vous êtes connecté en tant que 
    <strong><%= current_user.email %></strong>
    <%= "(admin)" if current_user.admin? %>
  </p>

  <%= button_to "Se déconnecter", destroy_user_session_path, method: :delete %>
<% end %>
